<Page x:Class="WpfApp1.Avtorizahia"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Avtorizahia" Background="Beige">
    <Grid>
        <StackPanel HorizontalAlignment="Center"  VerticalAlignment="Center">
            <TextBlock Text="Авторизация" HorizontalAlignment="Center" FontSize="20"/>
            <WrapPanel>
                <TextBlock Text="Логин" FontSize="20" Width="80"/>
                <TextBlock Text="Login" Width="200"/>
            </WrapPanel>
            <WrapPanel>
                <TextBlock Text="Пароль" FontSize="20" Width="80"/>
                <TextBlock Text="Password" FontSize="20" Width="200"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Center">
                <Button x:Name="Vhod" Content="Вход" FontSize="20" Click="Vhod_Click"/>
                <Button x:Name="Registr" Content="Регистрация" FontSize="20" Click="Registr_Click"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Page>
